{
  "name": "node-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "dev": "node_modules/nodemon/bin/nodemon.js",
    "prod": "NODE_ENV=prod pm2 start ts-node --name app -i 0 -- ./src/index.ts",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test nyc mocha test/unit/**/*.spec.ts",
    "test:integration": "NODE_ENV=test nyc mocha test/**/*.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "@types/mongoose": "^5.2.0",
    "@types/morgan": "^1.7.32",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "supertest": "^3.1.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.16.3",
    "mongoose": "^5.2.2",
    "morgan": "^1.7.0",
    "winston": "^3.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.js",
      "dist",
      "ci",
      "coverage",
      "src/index.ts",
      "src/config/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "./coverage",
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}